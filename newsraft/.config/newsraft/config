# Keybinds
bind j select-next
bind k select-prev
bind l enter
bind h quit
bind d mark-read; jump-to-next
bind D mark-unread; jump-to-next
bind o open-in-browser
bind r reload
bind R reload-all
bind m exec nohup mpv --fs --no-terminal "%l" >/dev/null 2>&1 &
bind b exec bm-add -l "%l" -n "%t - %T"
bind B exec bm-open

# Settings
reload-period 30 # in minutes
menu-feed-sorting unread-desc
item-rule link NOT LIKE '%youtube.com/shorts%'
