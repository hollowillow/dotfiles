# Keybinds
bind j select-next
bind k select-prev
bind l enter
bind h quit
bind d mark-read; jump-to-next
bind D mark-unread; jump-to-next
bind o open-in-browser
bind r reload
bind R reload-all
bind m exec mpv --fs --no-terminal "%l" &
bind b exec printf "%l" | xclip -i -selection clipboard; exec $HOME/.bin/bookmark -nq -m fzf -a add -f $HOME/notes/bookmarks
bind B exec printf "%l" | xclip -i -selection clipboard; exec $HOME/.bin/bookmark -nq -m fzf -a remove -f $HOME/notes/bookmarks

# Settings
reload-period 30 # in minutes
menu-feed-sorting unread-desc
