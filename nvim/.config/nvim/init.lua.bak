-- Basic settings
vim.o.number = true -- Enable line numbers
--vim.o.relativenumber = true -- Enable relative line numbers
vim.o.tabstop = 8 -- Number of spaces a tab represents
vim.o.shiftwidth = 8 -- Number of spaces for each indentation
vim.o.expandtab = true -- Convert tabs to spaces
vim.o.smartindent = true -- Automatically indent new lines
vim.o.wrap = false -- Disable line wrapping
vim.o.cursorline = true -- Highlight the current line
vim.o.cursorcolumn = true -- Highlight the current column
vim.o.termguicolors = true -- Enable 24-bit RGB colors
vim.o.mouse = 'a' -- enable mouse for all modes
vim.o.ignorecase = true -- ignore case when using search function
vim.o.smartcase = true -- ignore case when search includes capital letter
vim.o.hlsearch = true -- highlight search

-- Keymaps
vim.keymap.set('i', 'ii', '<Esc>')

-- Syntax highlighting and filetype plugins
vim.cmd('syntax enable')
vim.cmd('filetype plugin indent on')

